#include<iostream>
using namespace std;
int main()
{
    int tot,day1,day2,day3;
    cin >> tot;
    day1=(tot*2)/7;
    day2=day1*2;
    day3=day1/2;
    cout<<"Number of attendees on day 1 : "<<day1;
    cout<<"
    Number of attendees on day 2 : "<<day2;
    cout<<"
    Number of attendees on day 3 : "<<day3;
    return 0;
}